<% include head.ejs%>
<body class="login-body">
    <div class="col-sm-6 col-sm-offset-3">
        <img class="signup-logo-image" src="/assets/connecthub_logo.png">

        <!-- show any messages that come back with authentication -->
        <% if (message.length > 0) { %>
        <div class="alert alert-danger"><%= message %></div>
        <% } %>

        <!-- LOGIN FORM -->
        <form action="/signup" method="post" style="color: white">
            <div class="form-group">
                <label>Username</label>
                <input type="text" class="form-control" name="username" required>
            </div>
            <div class="form-group">
                <label>First Name</label>
                <input type="text" class="form-control" name="first" required>
            </div>
            <div class="form-group">
                <label>Last Name</label>
                <input type="text" class="form-control" name="last" required>
            </div>
            <div class="form-group">
                <label>Email</label>
                <input type="text" class="form-control" name="email" required>
            </div>
            <div class="form-group">
                <label>Password</label>
                <input type="password" class="form-control" name="password" required>
            </div>

            <button type="submit" class="btn btn-border btn-round color-1 material-design" style="background: #FD523E;">Signup</button>
            <a class="login-option" href="/login">Login</a>

        </form>

        <hr>
        <div style="color: #FD533E">
            Or login with any of the following services:<br />
            <a class="btn btn-block btn-social btn-facebook" style="overflow: inherit !important; width: 235px !important; background-color: #3B5998; text-transform: initial; line-height: 40px" href="/auth/facebook">
              <span class="fa fa-facebook" style="padding: 10px; font-size: x-large; float: left; border-right: 1px solid rgba(0,0,0,0.2); width: 40px;"></span> Connect with Facebook </a>
              <a class="btn btn-block btn-social btn-google" style="overflow: inherit !important; width: 235px !important; background-color: #DD4B39; text-transform: initial; line-height: 40px" href="/auth/google">
                <span class="fa fa-google-plus" style="padding: 10px; font-size: x-large; float: left; border-right: 1px solid rgba(0,0,0,0.2); width: 40px; margin-right: -15px"></span> Connect with Google </a>
        </div>
    </div>
  </body>

<% include foot.ejs%>
