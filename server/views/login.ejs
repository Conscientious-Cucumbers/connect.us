<% include head.ejs%>

    <div class="col-sm-6 col-sm-offset-3">

        <h1 class="login-statement" style="text-align: center; color: #039be5"> Login</h1>

        <% if (message.length) { %>
        <div class="alert alert-danger"><%= message %></div>
        <% } %>

        <!-- LOGIN FORM -->
        <form action="/login" method="post">
            <div class="form-group">
                <label>Email</label>
                <input type="text" class="form-control" name="email">
            </div>
            <div class="form-group">
                <label>Password</label>
                <input type="password" class="form-control" name="password">
            </div>

            <button type="submit" class="btn btn-border btn-round color-1 material-design" data-color="426FC5">Login</button>
        </form>

        <hr>
        <div style="color: #039be5">
            Or login with any of the following services:<br />
            <a style="margin-left:0px;margin-right:15px" href="/auth/facebook"><img style="margin-top:25px;" src="/assets/fb-logo.png" /></a>
            <a style="margin-right:0px" href="/auth/google"><img style="width:29px; margin-top:25px" src="/assets/google-logo.png" /></a>
        </div>
        <hr>

        <p style="color: #039be5">Need to sign up for an account?</p>
        <a href="/signup"><button type="submit" class="btn btn-border btn-round color-1 material-design" data-color="426FC5">Signup</button></a>

    </div>

<% include foot.ejs%>
